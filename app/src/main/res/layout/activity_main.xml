<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/name"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:hint="Enter Name"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/chkin"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Check IN"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/chkout"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Check OUT"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Select Your Country"
        android:textSize="20dp"
        android:typeface="monospace" />

    <Spinner
        android:id="@+id/spin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="300dp"
        android:layout_gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/rooms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:gravity="center"
        android:text="Select Your room"
        android:textSize="20dp"
        android:typeface="monospace" />

    <Spinner
        android:id="@+id/spin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarSize="300dp"
        android:layout_gravity="center_horizontal"
        />

    <!--    <AutoCompleteTextView-->
    <!--        android:id="@+id/auto"-->
    <!--        android:layout_width="300dp"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_gravity="center_horizontal"-->
    <!--        android:layout_margin="20dp" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView

            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:hint="Adult"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:hint="Children"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="No of Room"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/adult"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="0"
            android:inputType="number"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/child"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="0"
            android:inputType="number"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/room"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:hint="0"
            android:inputType="number"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <Button
        android:id="@+id/btncal"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:hint="Calculate"
        android:textAlignment="center"
        android:textSize="25dp"
        android:textStyle="bold" />

    <!--Output to Calculate total-->

    <TextView
        android:id="@+id/cost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="0"/>

    <TextView
        android:id="@+id/tvat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="0"/>

    <TextView
        android:id="@+id/tvsc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="120dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="0"/>

    <TextView
        android:id="@+id/tnettotal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="0"/>

    <TextView
        android:id="@+id/roomcost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="0"
        />

    <TextView
        android:id="@+id/roomno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:inputType="number"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="0"/>


    <TextView
        android:id="@+id/totaldays"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:layout_marginLeft="140dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:hint="0"/>

</LinearLayout>